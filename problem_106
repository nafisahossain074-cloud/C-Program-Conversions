#include <stdio.h>
#include <string.h>

int main() {
    int flag;
    char str[6];

    printf("Enter 1 (true) or 0 (false): ");
    scanf("%d", &flag);

    if (flag == 1)
        strcpy(str, "true");
    else
        strcpy(str, "false");

    printf("Boolean as string: %s\n", str);

    return 0;
}
